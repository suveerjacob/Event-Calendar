<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- jQuery fallback -->
    <script>
        if (!window.jQuery) { document.write('<script src="/content/js/jquery.min.js"><\/script>'); }
    </script>
    <script src="/content/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/content/js/MonthlyScript.js"> </script>
    <script src="/content/js/tota11y.min.js"></script>
    <link rel="stylesheet" href="/content/css/bootstrap.min.css">
    <link rel="stylesheet" href="/content/css/monthly.css"/>
</head>

<body>
    <div class="container">
        <br/><br/>
        <div class="row">
            <div class="col-xs-10 monthSelect">
                <span>
                <button type="button" value="prev" class="btn btn-primary update_month"><span class="glyphicon glyphicon-triangle-left"></span></button>
                &nbsp;<span id="date_here">Date</span>&nbsp;
                <button type="button" value="next" class="btn btn-primary update_month"><span class="glyphicon glyphicon-triangle-right"></span></button>
                </span>
            </div>
            <div class="col-xs-2 addEvent">
                <button type="button" id="common_add_event_btn" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-plus"></span>&nbsp;Add Event&nbsp;</button>
            </div>
        </div>
        <br/>
        <div>
            <div id="calendar-dates" class="flex-container">
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="common_add_event_modal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title">Add Event</h1>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal">

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="date_picker">Date:</label>
                                <div class="col-sm-10">
                                <input type="text" class="form-control" id="date_picker" placeholder="MM/DD/YYYY">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="title">Title:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="title">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="location">Location:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="location">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="description">Description:</label>
                                <div class="col-sm-10">
                                    <input type="text"  class="form-control" id="description">
                                </div>
                            </div>

                        </form>
                        <div id="warning" class="alert alert-danger hidden">
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" id="add_monthly">Add</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>

</html>